---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => post.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
  }).format(date);
};
---

{
  posts.length > 0 && (
    <section class="py-20 px-4 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-6xl font-bold text-white mb-4">
            Fresh from the <span class="text-yellow-400">Monster Blog</span>
          </h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            JavaScript insights, tutorials, and hot takes from the JS Monster community.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3 mb-8">
          {posts.map((post) => (
            <article class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-6 h-full transform transition-all duration-300 hover:scale-105 hover:border-yellow-400/30">
                  <div class="text-xs text-yellow-400 mb-2">{formatDate(post.data.pubDate)}</div>
                  <h3 class="text-xl font-bold text-white mb-3 group-hover:text-yellow-400 transition-colors duration-300">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-400 text-sm line-clamp-3">{post.data.description}</p>
                  <div class="mt-4 text-yellow-400 text-sm font-semibold flex items-center gap-1">
                    Read more
                    <svg
                      class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        <div class="text-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-6 py-3 bg-zinc-900 text-white font-bold rounded-lg hover:bg-zinc-800 transform hover:scale-105 transition-all duration-300 border border-zinc-800"
          >
            View All Posts
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </a>
        </div>
      </div>
    </section>
  )
}
