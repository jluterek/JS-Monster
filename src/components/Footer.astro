---
const currentYear = new Date().getFullYear();

// Random monster for footer
const monsterImages = [
  'JS Monster1.png',
  'JS Monster2.png',
  'JS Monster3.png',
  'JS Monster4.png',
  'JS Monster5.png',
  'JS Monster6.png',
  'JS Monster7.png',
  'JS Monster8.png',
];

const randomMonster = monsterImages[Math.floor(Math.random() * monsterImages.length)];
---

<footer class="py-12 px-4 bg-black border-t border-zinc-900 relative z-10">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-8">
      <div class="inline-block animate-wiggle mb-4">
        <img src={`/images/${randomMonster}`} alt="JS Monster" class="w-16 h-16 rounded-lg" />
      </div>
      <h3 class="text-2xl font-bold text-yellow-400 mb-2">JS Monster</h3>
      <p class="text-gray-500">Making JavaScript Fun Since Forever</p>
    </div>

    <div class="flex flex-wrap justify-center gap-8 mb-8">
      <a
        href="https://github.com/jluterek/JS-Monster"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-yellow-400 transition-colors duration-300 flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        GitHub
      </a>
      <a
        href="https://github.com/voodootikigod/logo.js"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-yellow-400 transition-colors duration-300"
      >
        Official JS Logo
      </a>
      <a href="/gallery" class="text-gray-500 hover:text-yellow-400 transition-colors duration-300">
        Gallery
      </a>
      <a href="/" class="text-gray-500 hover:text-yellow-400 transition-colors duration-300">
        Home
      </a>
      <a href="/#about" class="text-gray-500 hover:text-yellow-400 transition-colors duration-300">
        About
      </a>
    </div>

    <div class="text-center text-gray-600 text-sm">
      <p class="mb-2">
        Made with <span class="text-red-500">❤️</span> and lots of <span
          class="font-mono text-yellow-400">JavaScript</span
        >
      </p>
      <p>
        © {currentYear}
        <a href="https://www.jamesluterek.com">James Luterek</a> - Embrace the Beast!
      </p>
    </div>

    <div class="mt-8 text-center">
      <p class="text-gray-500 text-sm font-mono">
        console.log('<span class="text-yellow-400"
          >JS Monster says: Keep coding, keep creating!</span
        >');
      </p>
    </div>
  </div>
</footer>
