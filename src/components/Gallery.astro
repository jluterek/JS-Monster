---
import monstersData from '../data/monsters.json';

interface Props {
  showAll?: boolean;
  limit?: number;
}

const { showAll = false } = Astro.props;

// Filter monsters based on props
// For homepage, always show JS Monster 1-8
const monsters = showAll
  ? monstersData.monsters
  : monstersData.monsters
      .filter((m) =>
        [
          'JS Monster1.png',
          'JS Monster2.png',
          'JS Monster3.png',
          'JS Monster4.png',
          'JS Monster5.png',
          'JS Monster6.png',
          'JS Monster7.png',
          'JS Monster8.png',
        ].includes(m.file)
      )
      .sort((a, b) => {
        // Sort by filename number to ensure correct order
        const aNum = parseInt(a.file.match(/\d+/)?.[0] || '0');
        const bNum = parseInt(b.file.match(/\d+/)?.[0] || '0');
        return aNum - bNum;
      });
---

<section id="gallery" class="py-20 px-4 relative z-10">
  <div class="max-w-7xl mx-auto">
    {
      !showAll && (
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-6xl font-bold text-white mb-4">
            Featured <span class="text-yellow-400">Monsters</span>
          </h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Meet some of our favorite JS Monsters. Each one represents the power and personality of
            JavaScript in modern development.
          </p>
        </div>
      )
    }

    <div
      class:list={`grid grid-cols-1 sm:grid-cols-2 ${showAll ? 'lg:grid-cols-3 xl:grid-cols-4' : 'lg:grid-cols-4'} gap-6`}
    >
      {
        monsters.map((monster, index) => (
          <div class="group relative">
            <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:border-yellow-400/30">
              <div class="aspect-square overflow-hidden bg-black">
                <img
                  src={`/images/${monster.file}`}
                  alt={monster.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <h3 class="font-bold text-yellow-400 text-lg mb-1">{monster.title}</h3>
                <p class="text-gray-500 text-sm">{monster.description}</p>
              </div>
            </div>
            <div class="absolute -top-2 -right-2 bg-yellow-400 text-black rounded-lg w-8 h-8 flex items-center justify-center font-bold text-sm transform rotate-12 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              #{index + 1}
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      {
        !showAll ? (
          <a
            href="/gallery"
            class="inline-flex items-center gap-2 px-8 py-4 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transform hover:scale-105 transition-all duration-300 shadow-lg shadow-yellow-400/20"
          >
            View Complete Gallery
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </a>
        ) : (
          <>
            <p class="text-gray-400 text-lg mb-4">Want to contribute your own JS Monster design?</p>
            <a
              href="https://github.com/jluterek/JS-Monster"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 bg-zinc-900 text-white font-bold rounded-lg hover:bg-zinc-800 transform hover:scale-105 transition-all duration-300 border border-zinc-800"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              Contribute on GitHub
            </a>
          </>
        )
      }
    </div>
  </div>
</section>
