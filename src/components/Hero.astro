<style>
  .grid-background {
    background-image:
      linear-gradient(rgba(243, 223, 73, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(243, 223, 73, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
  }

  .js-particles::before {
    content: 'JS';
    position: absolute;
    font-family: 'Space Mono', monospace;
    font-weight: bold;
    font-size: 2rem;
    color: rgba(243, 223, 73, 0.05);
    animation: float-particle 15s infinite linear;
    top: 10%;
    left: 10%;
  }

  .js-particles::after {
    content: '{ }';
    position: absolute;
    font-family: 'Space Mono', monospace;
    font-weight: bold;
    font-size: 3rem;
    color: rgba(243, 223, 73, 0.05);
    animation: float-particle 20s infinite linear reverse;
    bottom: 20%;
    right: 15%;
  }

  @keyframes float-particle {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(100px, -100px) rotate(120deg);
    }
    66% {
      transform: translate(-50px, 50px) rotate(240deg);
    }
    100% {
      transform: translate(0, 0) rotate(360deg);
    }
  }
</style>
