---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

const getCategoryColor = (category: string) => {
  const colors: Record<string, string> = {
    javascript: 'bg-yellow-400/20 text-yellow-400 border-yellow-400/30',
    'web-development': 'bg-blue-400/20 text-blue-400 border-blue-400/30',
    tutorials: 'bg-green-400/20 text-green-400 border-green-400/30',
    news: 'bg-purple-400/20 text-purple-400 border-purple-400/30',
    opinion: 'bg-red-400/20 text-red-400 border-red-400/30',
  };
  return colors[category] || 'bg-gray-400/20 text-gray-400 border-gray-400/30';
};
---

<Layout title={post.data.title} description={post.data.description}>
  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Inter:wght@400;500;600;700&display=swap');

    .blog-content {
      font-family: 'Merriweather', Georgia, serif !important;
    }

    .blog-content h1,
    .blog-content h2,
    .blog-content h3,
    .blog-content h4,
    .blog-content h5,
    .blog-content h6 {
      font-family: 'Inter', system-ui, sans-serif !important;
      font-weight: 700 !important;
      color: white !important;
    }

    .blog-content h2 {
      font-size: 2rem !important;
      margin-top: 3rem !important;
      margin-bottom: 1.5rem !important;
    }

    .blog-content h3 {
      font-size: 1.5rem !important;
      margin-top: 2.5rem !important;
      margin-bottom: 1rem !important;
    }

    .blog-content p {
      font-size: 1.125rem !important;
      line-height: 1.9 !important;
      margin-bottom: 1.75rem !important;
      color: #d1d5db !important;
    }

    .blog-content ul,
    .blog-content ol {
      margin-bottom: 1.75rem !important;
    }

    .blog-content li {
      font-size: 1.125rem !important;
      line-height: 1.8 !important;
      margin-bottom: 0.5rem !important;
      color: #d1d5db !important;
    }

    .blog-content blockquote {
      border-left: 3px solid #f3df49 !important;
      padding-left: 1.5rem !important;
      font-style: italic !important;
      font-size: 1.25rem !important;
      color: #9ca3af !important;
    }

    .blog-content code {
      background: #18181b !important;
      color: #f3df49 !important;
      padding: 0.125rem 0.375rem !important;
      border-radius: 0.25rem !important;
    }

    .blog-content pre {
      background: #18181b !important;
      border: 1px solid #27272a !important;
      padding: 1.25rem !important;
      border-radius: 0.5rem !important;
      margin: 2rem 0 !important;
    }

    .blog-content pre code {
      background: transparent !important;
      padding: 0 !important;
      color: #d1d5db !important;
    }

    .blog-content a {
      color: #f3df49 !important;
      text-decoration: none !important;
      border-bottom: 1px solid transparent !important;
      transition: border-color 0.2s !important;
    }

    .blog-content a:hover {
      border-bottom-color: #f3df49 !important;
    }

    .blog-content strong {
      color: white !important;
      font-weight: 600 !important;
    }

    .blog-content em {
      color: #d1d5db !important;
    }
  </style>
  <Header />
  <main class="min-h-screen py-16 px-4 relative z-10">
    <article class="max-w-3xl mx-auto">
      <div class="mb-8">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-yellow-400 transition-colors duration-300 mb-6"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Blog
        </a>

        <div class="flex items-center gap-2 mb-4">
          <span
            class:list={`text-xs px-2 py-1 rounded-lg border ${getCategoryColor(post.data.category)}`}
          >
            {post.data.category}
          </span>
          {
            post.data.featured && (
              <span class="text-xs px-2 py-1 rounded-lg bg-yellow-400/20 text-yellow-400 border border-yellow-400/30">
                Featured
              </span>
            )
          }
        </div>

        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
          {post.data.title}
        </h1>

        <p class="text-xl text-gray-400 mb-6">
          {post.data.description}
        </p>

        <div
          class="flex items-center justify-between text-sm text-gray-500 pb-6 border-b border-zinc-800"
        >
          <div>
            By <span class="text-yellow-400">{post.data.author}</span>
          </div>
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </div>
      </div>

      {
        post.data.heroImage && (
          <div class="mb-8 rounded-xl overflow-hidden bg-black">
            <img src={post.data.heroImage} alt={post.data.title} class="w-full h-auto" />
          </div>
        )
      }

      <div class="blog-content prose prose-invert max-w-none">
        <Content />
      </div>

      {
        post.data.tags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-zinc-800">
            <h3 class="text-sm font-semibold text-gray-400 mb-3">Tags</h3>
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="text-xs px-3 py-1 bg-zinc-900 text-gray-400 rounded-lg border border-zinc-800">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
        )
      }

      <div class="mt-12 p-8 bg-zinc-900/50 rounded-xl border border-zinc-800">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-16 h-16 bg-yellow-400 rounded-xl flex items-center justify-center">
            <span class="text-2xl">ðŸŸ¨</span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">Join the Monster Community!</h3>
            <p class="text-gray-400">Share your thoughts and JavaScript adventures.</p>
          </div>
        </div>
        <a
          href="https://github.com/jluterek/JS-Monster/discussions"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transition-colors duration-300"
        >
          Join the Discussion
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </article>
  </main>
  <Footer />
</Layout>
